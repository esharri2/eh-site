<label class="block py-1">
    {% assign classes = "block w-full p-1 bg-light border-dark border-b dark:text-dark" %}
    {{label}}
    {% if type == 'textarea'%}
        <textarea class="{{classes}} h-6" name="{{name}}" {% if required%} required {% endif %} {% if placeholder %} placeholder="{{placeholder}}" {% endif %}></textarea>
    {% else %}
        <input class="{{classes}}" name="{{name}}" {% if placeholder %} placeholder="{{placeholder}}" {% endif %} {% if required%} required {% endif %} type="{{type | default: "text"}}" />
    {% endif %}
</label>