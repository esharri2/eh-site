---js
{
  title: 'Recent posts',
  pagination: {
    data: 'collections.post',
    size: 4,
    alias: 'posts',
    reverse: true,
    before: function(data) {
      return data.filter((item) => item.data.permalink !== false);
    }
  }
}
---

<div class="container">
    {% comment %}
    {% include 'heading', level: 1, text: title %}
      {% include 'bloglist', posts: posts%} 
    {% endcomment %}
    {% capture icon %}
        {{ '/_includes/icons/arrow-thin-right.svg' | svgContents:'ml-3 w-3 h-3' }}
    {% endcapture %}
    {% if posts.size > 4 %}
      {% include 'button', label: "View all blogs", href: "/blog", icon: icon %}
    {% endif %}
</div>
