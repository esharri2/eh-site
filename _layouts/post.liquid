---
layout: default
---
{% capture view_more %}
    <div class="container">
        <a
            class="flex items-center"
            href="/blog#{{page.fileSlug}}">{{ '/_includes/icons/chevron-left.svg' | svgContents:'w-3 h-3 mr-1' }}View more posts</a>
    </div>
{% endcapture %}

{% capture click_to_copy %}
    {% assign page_link = site.domain | append: page.url %}
    <div class="mt-4 text-sm flex justify-end" data-click-to-copy>
        <button class="flex items-center">
            <span data-action-icon>{{ '/_includes/icons/copy.svg' | svgContents:'w-3 h-3 mr-1' }}</span>
            <span data-action-label>Copy a link to this post</span>
            <span class="hidden" data-success-icon>{{ '/_includes/icons/checkmark.svg' | svgContents:'w-3 h-3 mr-1' }}</span>
            <span class="hidden" data-success-label>Copied to clipboard</span>
        </button>
        <input class="hidden" type="text" value="{{page_link}}">
    </div>
{% endcapture %}


<article class="container pb-4 lg:pt-4">
    {% render 'h1', text: title, visible: true, sentence_case: true, classes:"max-w-xl" %}
    <p class="text-xs uppercase">{% prettyDate date %}</p>
    <p class="py-2 italic text-lg">{{description}}</p>
    <div class="md max-w-prose text-dark dark:text-light">
        {{content}}
        {{click_to_copy}}
    </div>

</article>
